SELECT
  t1.*,
  t2.*
FROM (
  SELECT
    *,
    -- 1) single CASE for table1
    CASE
      WHEN condition1 THEN value1
      WHEN condition2 THEN value2
      WHEN condition3 THEN value3
      ELSE value4
    END AS key_part1,

    -- 2) primary key for table1
    CONCAT(key_part1, '_', AU) AS pk_table1
  FROM table1
) t1
LEFT JOIN (
  SELECT
    *,
    -- 1) single CASE for table2
    CASE
      WHEN condition1 THEN value1
      WHEN condition2 THEN value2
      WHEN condition3 THEN value3
      ELSE value4
    END AS key_part2,

    -- 2) primary key for table2
    CONCAT(key_part2, '_', AU) AS pk_table2
  FROM table2
) t2
  ON t1.pk_table1 = t2.pk_table2
